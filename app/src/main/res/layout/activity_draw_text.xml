<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DrawTextActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/guid_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/purple_500"
            android:layout_marginTop="24dp"/>
        <com.divyanshu.draw.widget.DrawView
            android:id="@+id/draw_view_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/guid_constraint_layout"
            app:layout_constraintStart_toStartOf="@id/guid_constraint_layout"
            app:layout_constraintEnd_toEndOf="@id/guid_constraint_layout"
            app:layout_constraintBottom_toBottomOf="@id/guid_constraint_layout"
            android:layout_margin="4dp"
            android:background="@color/black"/>
        <Button
            android:id="@+id/run_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="실행"
            app:layout_constraintTop_toBottomOf="@id/guid_constraint_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"/>
        <Button
            android:id="@+id/clear_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="clear"
            app:layout_constraintTop_toBottomOf="@id/guid_constraint_layout"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/run_button"
            android:layout_marginTop="48dp"
            tools:text="asdfasdfasdf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>